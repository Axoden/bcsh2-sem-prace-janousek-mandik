@model sem_prace_janousek_mandik.Models.Payment.Faktury
@section Title{
	Nová faktura
}

@{
    Layout = "~/Views/Shared/_LayoutAll.cshtml";
}

<div class="text-center">
<h1>Nová faktura</h1>
</div>

<hr />
<div class="form">
    <div class="col-md-4">
        <p>@ViewBag.ErrorInfo</p>
        <form asp-action="AddInvoice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CisloFaktury" class="control-label"></label>
                <input asp-for="CisloFaktury" class="form-control" />
                <span asp-validation-for="CisloFaktury" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumVystaveni" class="control-label"></label>
                <input asp-for="DatumVystaveni" class="form-control" />
                <span asp-validation-for="DatumVystaveni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumSplatnosti" class="control-label"></label>
                <input asp-for="DatumSplatnosti" class="form-control" />
                <span asp-validation-for="DatumSplatnosti" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CastkaObjednavka" class="control-label"></label>
                <input asp-for="CastkaObjednavka" pattern="^\d+(\.\d+)?$" title="Desetinné číslo oddělujte tečkou (.)" class="form-control" />
                <span asp-validation-for="CastkaObjednavka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CastkaDoprava" class="control-label"></label>
                <input asp-for="CastkaDoprava" pattern="^\d+(\.\d+)?$" title="Desetinné číslo oddělujte tečkou (.)" class="form-control" />
                <span asp-validation-for="CastkaDoprava" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dph" class="control-label"></label>
                <input asp-for="Dph" pattern="^\d+(\.\d+)?$" title="Desetinné číslo oddělujte tečkou (.)" class="form-control" />
                <span asp-validation-for="Dph" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Přidat" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>