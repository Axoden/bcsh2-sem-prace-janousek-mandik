@using sem_prace_janousek_mandik.Models.Payment;
@model sem_prace_janousek_mandik.Models.Payment.Platby
@section Title{
	Úprava platby
}

@{
    Layout = "~/Views/Shared/_LayoutAll.cshtml";
}

@{
    List<Faktury> faktury = ViewBag.ListOfInvoices;
}

<h1>Úprava platby</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <p>@ViewBag.ErrorInfo</p>
        <form asp-action="EditPayment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DatumPlatby" class="control-label"></label>
                <input asp-for="DatumPlatby" class="form-control" />
                <span asp-validation-for="DatumPlatby" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Castka" class="control-label"></label>
                <input asp-for="Castka" class="form-control" />
                <span asp-validation-for="Castka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypPlatby" class="control-label"></label>
                <input asp-for="TypPlatby" class="form-control" />
                <span asp-validation-for="TypPlatby" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VariabilniSymbol" class="control-label"></label>
                <input asp-for="VariabilniSymbol" class="form-control" />
                <span asp-validation-for="VariabilniSymbol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdFaktury">Faktura</label>
                <select asp-for="IdFaktury" class="form-control">
                    @foreach (Faktury item in faktury)
                    {
                        <option value="@item.IdFaktury">@item.CisloFaktury, @item.DatumVystaveni</option>
                    }
                </select>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Upravit" class="btn btn-primary" asp-route-index="@Model.IdFaktury" />
            </div>
        </form>
    </div>
</div>