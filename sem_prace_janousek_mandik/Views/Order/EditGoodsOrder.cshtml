@model sem_prace_janousek_mandik.Models.Order.ZboziObjednavek_Zbozi

@section Title{
	Úprava zboží objednávky
}

@{
    Layout = "~/Views/Shared/_LayoutAll.cshtml";
}


<h1>Úprava zboží objednávky</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <p>@ViewBag.ErrorInfo</p>
        <form asp-action="EditGoodsOrder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Zbozi.Nazev" class="control-label"></label>
                <input asp-for="Zbozi.Nazev" class="form-control" disabled />
                <span asp-validation-for="Zbozi.Nazev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZboziObjednavek.Mnozstvi" class="control-label"></label>
                <input asp-for="ZboziObjednavek.Mnozstvi" class="form-control" />
                <span asp-validation-for="ZboziObjednavek.Mnozstvi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZboziObjednavek.JednotkovaCena" class="control-label"></label>
                <input asp-for="ZboziObjednavek.JednotkovaCena" class="form-control" />
                <span asp-validation-for="ZboziObjednavek.JednotkovaCena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Upravit zboží objednávky" class="btn btn-primary" asp-route-index="@Model.ZboziObjednavek.IdZboziObjednavky" />
            </div>
        </form>
    </div>
</div>