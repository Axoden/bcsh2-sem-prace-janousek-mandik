@using sem_prace_janousek_mandik.Models.Goods;
@using sem_prace_janousek_mandik.Models.Supplier;
@model sem_prace_janousek_mandik.Models.Goods.Zbozi_Umisteni_Kategorie_Dodavatele
@section Title{
	Nové zboží
}

@{
	Layout = "~/Views/Shared/_LayoutAll.cshtml";
}

<h1>Nové zboží</h1>

<hr />
<div class="row">
	<div class="col-md-4">
		<p>@ViewBag.ErrorInfo</p>
		<form asp-action="AddGoods">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<div class="form-group">
				<label asp-for="Zbozi.Nazev" class="control-label"></label>
				<input asp-for="Zbozi.Nazev" class="form-control" />
				<span asp-validation-for="Zbozi.Nazev" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Zbozi.JednotkovaCena" class="control-label"></label>
				<input asp-for="Zbozi.JednotkovaCena" class="form-control" />
				<span asp-validation-for="Zbozi.JednotkovaCena" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Zbozi.PocetNaSklade" class="control-label"></label>
				<input asp-for="Zbozi.PocetNaSklade" class="form-control" />
				<span asp-validation-for="Zbozi.PocetNaSklade" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Zbozi.CarovyKod" class="control-label"></label>
				<input asp-for="Zbozi.CarovyKod" class="form-control" />
				<span asp-validation-for="Zbozi.CarovyKod" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Zbozi.Poznamka" class="control-label"></label>
				<input asp-for="Zbozi.Poznamka" class="form-control" />
				<span asp-validation-for="Zbozi.Poznamka" class="text-danger"></span>
			</div>


			@{
				List<Kategorie> kategorie = ViewBag.ListOfCategories;
				List<Umisteni> umisteni = ViewBag.ListOfLocations;
				List<Dodavatele_Adresy> dodavatel = ViewBag.ListOfSuppliers;
			}

			<div class="form-group">
				<label asp-for="Kategorie">Kategorie</label>
				<select asp-for="Zbozi.IdKategorie" class="form-control">
					@foreach (Kategorie item in kategorie)
					{
						<option value="@item.IdKategorie">@item.Nazev, @item.Zkratka</option>
					}
				</select>
			</div>
			<div class="form-group">
				<label asp-for="Umisteni">Umístění</label>
				<select asp-for="Zbozi.IdUmisteni" class="form-control">
					@foreach (Umisteni item in umisteni)
					{
						<option value="@item.IdUmisteni">@item.Mistnost, @item.Rada, @item.Regal, @item.Pozice</option>
					}
				</select>
			</div>
			<div class="form-group">
				<label asp-for="Dodavatele">Dodavatel</label>
				<select asp-for="Zbozi.IdDodavatele" class="form-control">
					@foreach (Dodavatele_Adresy item in dodavatel)
					{
						<option value="@item.Dodavatele.IdDodavatele">@item.Dodavatele.Nazev</option>
					}
				</select>
			</div>

			<div class="form-group">
				<input type="submit" value="Přidat" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>