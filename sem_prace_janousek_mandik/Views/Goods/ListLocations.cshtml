@using sem_prace_janousek_mandik.Models.Goods;
@section Title{
	Výpis umístění
}

@{
	Layout = "~/Views/Shared/_LayoutAll.cshtml";
}

<div class="text-center">
	<h2>Výpis všech umístění:</h2>

	@if (ViewBag.Role.Equals("Admin") || ViewBag.Role.Equals("Manazer") || ViewBag.Role.Equals("Logistik") || ViewBag.Role.Equals("Skladnik"))
	{
		<a asp-controller="Goods" asp-action="AddLocation"><button type="submit">Přidat umístění</button></a>
		<br />
		<br />
	}

	<table border="1">
		<tr>
			<td>Místnost</td>
			<td>Řada</td>
			<td>Regál</td>
			<td>Pozice</td>
			<td>Datum</td>
			<td>Poznámka</td>
			<td>Upravit</td>
			<td>Odstranit</td>

		</tr>

		@foreach (Umisteni item in ViewBag.ListOfLocations)
		{
			<tr>
				<td>@item.Mistnost</td>
				<td>@item.Rada</td>
				<td>@item.Regal</td>
				<td>@item.Pozice</td>
				<td>@item.Datum</td>
				<td>@item.Poznamka</td>
				<td><a asp-controller="Goods" asp-action="EditLocation" asp-route-index="@item.IdUmisteni">Upravit</a></td>
				<td><a asp-controller="Goods" asp-action="DeleteLocation" asp-route-index="@item.IdUmisteni">Smazat</a></td>
			</tr>
		}
	</table>
</div>