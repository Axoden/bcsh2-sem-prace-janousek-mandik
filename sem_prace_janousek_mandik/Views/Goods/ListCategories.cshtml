@model List<sem_prace_janousek_mandik.Models.Goods.Kategorie>
@using sem_prace_janousek_mandik.Controllers.Goods;
@using sem_prace_janousek_mandik.Models.Goods;
@section Title{
	Výpis kategorií
}

@{
	Layout = "~/Views/Shared/_LayoutAll.cshtml";
}

<div class="text-center">
	<h2>Výpis všech kategorií:</h2>

	@if (ViewBag.Role.Equals("Admin") || ViewBag.Role.Equals("Manazer") || ViewBag.Role.Equals("Logistik"))
	{
		<a asp-controller="@nameof(sem_prace_janousek_mandik.Controllers.Goods)" asp-action="@nameof(GoodsController.AddCategory)"><button type="submit">Přidat kategorii</button></a>
		<br />
		<br />
	}

	<table border="1">
		<tr>
			<td>Název</td>
			<td>Zkratka</td>
			<td>Popis</td>
			@if (ViewBag.Role.Equals("Admin") || ViewBag.Role.Equals("Manazer") || ViewBag.Role.Equals("Logistik"))
			{
				<td>Upravit</td>
				<td>Odstranit</td>
			}
		</tr>

		@foreach (Kategorie item in Model)
		{
			<tr>
				<td>@item.Nazev</td>
				<td>@item.Zkratka</td>
				<td>@item.Popis</td>
				@if (ViewBag.Role.Equals("Admin") || ViewBag.Role.Equals("Manazer") || ViewBag.Role.Equals("Logistik"))
				{
					<td>
						<form asp-controller="@nameof(sem_prace_janousek_mandik.Controllers.Goods)" asp-action="@nameof(GoodsController.EditCategoryGet)">
							<input type="hidden" name="index" value="@item.IdKategorie" />
							<input type="submit" value="Upravit" class="btn btn-primary" />
						</form>
					</td>
					<td><a asp-controller="@nameof(sem_prace_janousek_mandik.Controllers.Goods)" asp-action="@nameof(GoodsController.DeleteCategory)" asp-route-index="@item.IdKategorie">Smazat</a></td>
				}
			</tr>
		}
	</table>
</div>