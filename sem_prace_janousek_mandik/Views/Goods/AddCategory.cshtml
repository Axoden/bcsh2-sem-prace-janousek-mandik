@using sem_prace_janousek_mandik.Models.Goods;
@model sem_prace_janousek_mandik.Models.Goods.Kategorie_NadrazenaKategorie_List

@section Title{
	Přidání kategorie
}

@{
    Layout = "~/Views/Shared/_LayoutAll.cshtml";
}

<h1>Přidání nové kategorie</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <p>@ViewBag.ErrorInfo</p>
        <form asp-action="AddCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Kategorie.Nazev" class="control-label"></label>
                <input asp-for="Kategorie.Nazev" class="form-control" />
                <span asp-validation-for="Kategorie.Nazev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kategorie.Zkratka" class="control-label"></label>
                <input asp-for="Kategorie.Zkratka" class="form-control" />
                <span asp-validation-for="Kategorie.Zkratka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kategorie.Popis" class="control-label"></label>
                <input asp-for="Kategorie.Popis" class="form-control" />
                <span asp-validation-for="Kategorie.Popis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kategorie.IdNadrazeneKategorie">Nadřazená kategorie</label>
                <select asp-for="Kategorie.IdNadrazeneKategorie" class="form-control">
                    <option value="0"></option>
                    @foreach (Kategorie item in Model.NadrazenaKategorie)
                    {
                        <option value="@item.IdKategorie">@item.Nazev, @item.Zkratka</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Přidat kategorii" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>