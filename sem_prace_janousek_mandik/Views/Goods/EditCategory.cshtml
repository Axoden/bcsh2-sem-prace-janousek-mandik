@model sem_prace_janousek_mandik.Models.Goods.Kategorie
@section Title{
	Úprava pozice
}

@{
    Layout = "~/Views/Shared/_LayoutAll.cshtml";
}

<h1>Úprava kategorie</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <p>@ViewBag.ErrorInfo</p>
        <form asp-action="EditCategoryPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nazev" class="control-label"></label>
                <input asp-for="Nazev" class="form-control" />
                <span asp-validation-for="Nazev" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Zkratka" class="control-label"></label>
                <input asp-for="Zkratka" class="form-control" />
                <span asp-validation-for="Zkratka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Popis" class="control-label"></label>
                <input asp-for="Popis" class="form-control" />
                <span asp-validation-for="Popis" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="hidden" name="index" value="@Model.IdKategorie" />
            </div>

            <div class="form-group">
                <input type="submit" value="Upravit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>