@using sem_prace_janousek_mandik.Controllers.Supplier;
@model sem_prace_janousek_mandik.Models.Supplier.Dodavatele_Adresy
@section Title{
	Úprava dodavatele
}

@{
	Layout = "~/Views/Shared/_LayoutAll.cshtml";
}

<div class="text-center">
	<h1>Úprava dodavatele</h1>
</div>

<hr />
<div class="form">
	<div class="col-md-4">
		<p>@ViewBag.ErrorInfo</p>
		<form asp-action="@nameof(SupplierController.EditSupplierPost)">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Dodavatele.Nazev" class="control-label"></label>
				<input asp-for="Dodavatele.Nazev" class="form-control" />
				<span asp-validation-for="Dodavatele.Nazev" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Dodavatele.Jmeno" class="control-label"></label>
				<input asp-for="Dodavatele.Jmeno" class="form-control" />
				<span asp-validation-for="Dodavatele.Jmeno" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Dodavatele.Prijmeni" class="control-label"></label>
				<input asp-for="Dodavatele.Prijmeni" class="form-control" />
				<span asp-validation-for="Dodavatele.Prijmeni" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Dodavatele.Telefon" class="control-label"></label>
				<input asp-for="Dodavatele.Telefon" class="form-control" />
				<span asp-validation-for="Dodavatele.Telefon" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Dodavatele.Email" class="control-label"></label>
				<input asp-for="Dodavatele.Email" class="form-control" />
				<span asp-validation-for="Dodavatele.Email" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Adresy.Ulice" class="control-label"></label>
				<input asp-for="Adresy.Ulice" class="form-control" />
				<span asp-validation-for="Adresy.Ulice" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Adresy.Mesto" class="control-label"></label>
				<input asp-for="Adresy.Mesto" class="form-control" />
				<span asp-validation-for="Adresy.Mesto" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Adresy.Okres" class="control-label"></label>
				<input asp-for="Adresy.Okres" class="form-control" placeholder="<nevyplněno>" />
				<span asp-validation-for="Adresy.Okres" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Adresy.Zeme" class="control-label"></label>
				<input asp-for="Adresy.Zeme" class="form-control" />
				<span asp-validation-for="Adresy.Zeme" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Adresy.Psc" class="control-label"></label>
				<input asp-for="Adresy.Psc" class="form-control" />
				<span asp-validation-for="Adresy.Psc" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="hidden" asp-for="Dodavatele.IdDodavatele" value="@Model.Dodavatele.IdDodavatele" />
			</div>

			<div class="form-group">
				<input type="hidden" asp-for="Dodavatele.IdAdresy" value="@Model.Dodavatele.IdAdresy" />
			</div>
			<br />
			<div class="form-group">
				<input type="submit" value="Upravit" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>